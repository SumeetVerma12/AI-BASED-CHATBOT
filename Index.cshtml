@{
    ViewData["Title"] = "Chat";
}
<style>
    :root {
        --bg: #0f172a;
        --panel: #111827;
        --me: #2563eb;
        --bot: #374151;
        --text: #e5e7eb;
        --muted: #9ca3af;
    }

    body {
        background: var(--bg);
        color: var(--text);
    }

    .chat-wrap {
        max-width: 820px;
        margin: 32px auto;
        padding: 0 12px;
    }

    .card {
        background: var(--panel);
        border: 1px solid #1f2937;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
        overflow: hidden;
    }

    .card-header {
        padding: 14px 18px;
        border-bottom: 1px solid #1f2937;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #22c55e;
        box-shadow: 0 0 10px #22c55e;
    }

    .title {
        font-weight: 600;
        letter-spacing: .2px;
    }

    .chat {
        height: 60vh;
        overflow-y: auto;
        padding: 18px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        scroll-behavior: smooth;
    }

    .msg {
        max-width: 78%;
        padding: 10px 14px;
        border-radius: 14px;
        line-height: 1.35;
        white-space: pre-wrap;
    }

    .bot {
        align-self: flex-start;
        background: var(--bot);
        border: 1px solid #4b5563;
    }

    .me {
        align-self: flex-end;
        background: var(--me);
        border: 1px solid #1d4ed8;
    }

    .meta {
        font-size: 12px;
        color: var(--muted);
        margin-top: 4px;
    }

    .row {
        display: flex;
        gap: 10px;
        align-items: flex-end;
    }

        .row.me {
            justify-content: flex-end;
        }

    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        background: #111;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        border: 1px solid #374151;
    }

    .input {
        display: flex;
        gap: 10px;
        padding: 12px;
        border-top: 1px solid #1f2937;
        background: #0b1220;
    }

        .input textarea {
            flex: 1;
            resize: none;
            border: 1px solid #1f2937;
            background: #0f172a;
            color: var(--text);
            border-radius: 12px;
            padding: 10px 12px;
            height: 46px;
            line-height: 1.35;
        }

    .btn {
        padding: 0 16px;
        border-radius: 12px;
        border: 1px solid #1f2937;
        background: #1f2937;
        color: #e5e7eb;
        height: 46px;
        cursor: pointer;
    }

        .btn[disabled] {
            opacity: .6;
            cursor: not-allowed;
        }

    .typing {
        display: inline-block;
        min-width: 28px;
    }

        .typing span {
            display: inline-block;
            width: 6px;
            height: 6px;
            margin: 0 2px;
            background: #d1d5db;
            border-radius: 50%;
            animation: blink 1.2s infinite ease-in-out;
        }

            .typing span:nth-child(2) {
                animation-delay: .15s
            }

            .typing span:nth-child(3) {
                animation-delay: .3s
            }
    

    .helper {
        padding: 10px 18px;
        font-size: 12px;
        color: var(--muted);
    }
</style>

<div class="chat-wrap">
    <div class="card">
        <div class="card-header">
            <div class="dot"></div>
            <div class="title">Chat</div>
        </div>

        <div id="chat" class="chat" aria-live="polite">
            <div class="row">
                <div class="avatar">🤖</div>
                <div>
                    <div class="msg bot">Hi! Ask me anything (general knowledge). Shift+Enter = new line.</div>
                    <div class="meta">Bot • just now</div>
                </div>
            </div>
        </div>

        <form id="chatForm" method="post" asp-action="Send" class="input">
            @Html.AntiForgeryToken()
            <textarea id="msg" name="message" placeholder="Type your question…" aria-label="Message"></textarea>
            <button id="sendBtn" class="btn" type="submit">Send</button>
        </form>

        <div class="helper">Tip: Press <strong>Enter</strong> to send, <strong>Shift+Enter</strong> for a new line.</div>
    </div>
</div>

@section Scripts {
    <script>
        const chat = document.getElementById('chat');
        const form = document.getElementById('chatForm');
        const input = document.getElementById('msg');
        const sendBtn = document.getElementById('sendBtn');
        let inflight = false;
        let typingEl;

        function addMsg({ text, mine = false, meta = "" }) {
          const row = document.createElement('div');
          row.className = 'row' + (mine ? ' me' : '');

          const bubble = document.createElement('div');
          bubble.className = 'msg ' + (mine ? 'me' : 'bot');
          bubble.textContent = text;

          const metaEl = document.createElement('div');
          metaEl.className = 'meta';
          metaEl.textContent = meta;

          if (mine) {
            row.appendChild(bubble);
            const right = document.createElement('div');
            right.appendChild(metaEl);
            row.appendChild(right);
          } else {
            const avatar = document.createElement('div');
            avatar.className = 'avatar';
            avatar.textContent = '🤖';
            row.appendChild(avatar);
            const wrap = document.createElement('div');
            wrap.appendChild(bubble);
            wrap.appendChild(metaEl);
            row.appendChild(wrap);
          }

          chat.appendChild(row);
          chat.scrollTop = chat.scrollHeight;
        }

        function showTyping() {
          typingEl = document.createElement('div');
          typingEl.className = 'row';
          typingEl.innerHTML = `
            <div class="avatar">🤖</div>
            <div>
              <div class="msg bot"><span class="typing"><span></span><span></span><span></span></span></div>
              <div class="meta">Bot is typing…</div>
            </div>`;
          chat.appendChild(typingEl);
          chat.scrollTop = chat.scrollHeight;
        }
        function hideTyping() {
          if (typingEl && typingEl.parentNode) typingEl.parentNode.removeChild(typingEl);
          typingEl = null;
        }

        // Enter to send, Shift+Enter for newline
        input.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            form.requestSubmit();
          }
        });

        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if (inflight) return;

          const m = input.value.trim();
          if (!m) return;

          // Capture text FIRST, then put it into FormData explicitly
          const fd = new FormData(form);
          fd.set('message', m);

          addMsg({ text: m, mine: true, meta: 'You • ' + new Date().toLocaleTimeString() });

          // lock UI
          inflight = true;
          sendBtn.disabled = true;
          input.disabled = true;
          input.value = '';
          input.style.height = '46px';
          showTyping();

          try {
            const r = await fetch('@Url.Action("Send", "Chat")', {
              method: 'POST',
              headers: { 'X-Requested-With': 'XMLHttpRequest' },
              body: fd
            });

            const contentType = r.headers.get('content-type') || '';
            const payload = contentType.includes('application/json') ? await r.json() : { answer: await r.text() };

            hideTyping();

            if (!r.ok) {
              addMsg({ text: (payload?.error || 'Something went wrong.'), mine: false, meta: 'Error • ' + new Date().toLocaleTimeString() });
            } else {
              const ans = (payload?.answer ?? '(no response)').toString().trim();
              addMsg({ text: ans, mine: false, meta: 'Bot • ' + new Date().toLocaleTimeString() });
            }
          } catch (err) {
            hideTyping();
            addMsg({ text: 'Network error. Please try again.', mine: false, meta: 'Error • ' + new Date().toLocaleTimeString() });
          } finally {
            inflight = false;
            sendBtn.disabled = false;
            input.disabled = false;
            input.focus();
          }
        });

        // auto-grow textarea
        input.addEventListener('input', () => {
          input.style.height = '46px';
          input.style.height = Math.min(input.scrollHeight, 160) + 'px';
        });
    </script>
}
